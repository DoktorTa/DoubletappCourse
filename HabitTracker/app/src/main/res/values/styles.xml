<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NameHabitText">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:maxLength">@integer/max_len_name_habit</item>
    </style>

    <style name="StandardHabitText">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLength">@integer/max_len_description_habit</item>
    </style>

    <style name="StandardHabitValue" parent="StandardHabitText">
        <item name="android:maxLength">@integer/max_len_value_habit</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="background">@android:color/white</item>
    </style>

</resources>