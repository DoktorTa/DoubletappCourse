<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/habit_item_margin"
    android:layout_marginRight="@dimen/habit_item_margin"
    android:layout_marginTop="@dimen/habit_item_margin"
    android:background="@drawable/habit_item_background"
    >

    <TextView
        android:id="@+id/nameHabit"
        style="@style/NameHabitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/habit_item_text_left_margin"
        android:text="@string/habit_name_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descriptionHabit"
        android:layout_marginStart="@dimen/habit_item_text_left_margin"
        style="@style/StandardHabitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/habit_description_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameHabit" />

    <TextView
        android:id="@+id/infoHabit"
        android:layout_marginStart="@dimen/habit_item_text_left_margin"
        style="@style/StandardHabitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/habit_item_info_margin_top"
        android:text="@string/habit_info_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionHabit" />

    <View
        android:id="@+id/colorHabit"
        android:layout_width="@dimen/habit_item_color_size"
        android:layout_height="@dimen/habit_item_color_size"
        android:layout_marginTop="@dimen/habit_item_color_margin"
        android:layout_marginEnd="@dimen/habit_item_color_margin"
        android:background="@drawable/habit_item_color_element_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>